<h1 class="text-3xl font-medium">Uusi työsopimus</h1>

<div class="py-3"></div>

<form id="uusi-tyosopimus-form" hx-post="/tyosopimukset" hx-target="#main-content">
  <label>
    <h2 class="text-xl font-medium">Valitse työkohde</h2>
    <select name="tyokohde_id" required class="modal-input">
      <option value="">Työkohde</option>
      {{#each tyokohteet}}
      <option value="{{id}}">#{{id}}. {{tyyppi}}, {{osoite}}, {{postinumero}} {{postitoimipaikka}}</option>
      {{/each}}
    </select>
  </label>

  <div class="py-3"></div>

  <label>
    <h2 class="text-xl font-medium">Valitse asiakas</h2>
    <select name="asiakas_id" required class="modal-input">
      <option value="">Asiakas</option>
      {{#each asiakkaat}}
      <option value="{{id}}">#{{id}}. {{nimi}}</option>
      {{/each}}
    </select>
  </label>

  <div class="py-3"></div>

  <h2 class="text-xl font-medium">Työsopimuksen tyyppi</h2>
  <label class="flex items-center pt-4">
    <input type="radio" value="urakka" name="tyyppi" required
      class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2" />
    <span class="text-sm font-medium ms-2">
      Urakka
    </span>
  </label>
  <label class="flex items-center pt-4">
    <input type="radio" value="tuntihinta" name="tyyppi" required
      class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2" />
    <span class="text-sm font-medium ms-2">
      Tuntihinta
    </span>
  </label>

  <div class="py-3"></div>

  <div class="flex items-center">
    <button type="submit" class="button-submit">
      Tallenna
    </button>
    <div class="p-1"></div>
    <button hx-get="/tyhja" hx-target="#modal-content" class="button-cancel">
      Peruuta
    </button>
  </div>
</form>