<h2 class="font-medium text-xl">Uusi työsuoritus</h2>

<form hx-post="/tyosopimukset/{{id}}/tyosuoritus" hx-target="#modal-content">
  <div class="mb-5">
    <label>
      <div class="mb-2 text-sm font-medium text-gray-900">Tuntihintatyyppi</div>
      <select name="tuntihintatyyppi_id" required class="modal-input modal-i">
        <option value="">Tuntihintatyyppi</option>
        {{#each tht}}
        <option value="{{id}}">{{tyyppi}}, {{tuntihinta}} €/h</option>
        {{/each}}
      </select>
    </label>
  </div>

  <div class="mb-5">
    <label>
      <div class="mb-2 text-sm font-medium text-gray-900">Aleprosentti</div>
      <input hx-get="/tyosopimukset/{{id}}/tyot/hinta" hx-trigger="keyup delay:200ms changed" hx-target="#hinta"
        hx-include="input, select" name="aleprosentti" value="0" type="number" min="0" max="100" step="0.1"
        class="modal-input modal-i" required>
    </label>
  </div>

  <div class="mb-5">
    <label>
      <div class="mb-2 text-sm font-medium text-gray-900">ALV-prosentti</div>
      <input hx-get="/tyosopimukset/{{id}}/tyot/hinta" hx-trigger="keyup delay:200ms changed" hx-target="#hinta"
        hx-include="input, select" name="alv_prosentti" value="24" type="number" min="0" max="100" step="0.1"
        class="modal-input modal-i" required>
    </label>
  </div>

  <div class="mb-5">
    <label>
      <div class="mb-2 text-sm font-medium text-gray-900">Tunnit</div>
      <input hx-get="/tyosopimukset/{{id}}/tyot/hinta" hx-trigger="keyup delay:200ms changed" hx-target="#hinta"
        hx-include="input, select" name="tunnit" type="number" min="0" class="modal-input modal-i" required>
    </label>
  </div>

  <div class="mb-5" id="hinta">
  </div>

  <div class="flex items-center">
    <button type="submit" class="button-submit">
      Tallenna
    </button>
    <div class="p-1"></div>
    <button hx-get="/tyhja" hx-target="#modal-content" class="button-cancel">
      Peruuta
    </button>
  </div>
</form>