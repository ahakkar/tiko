<h2 class="font-medium text-xl">Uusi muistutuslasku</h2>

<div class="p-2"></div>

<form hx-post="/laskut" hx-target="#modal-content" hx-vals='{"edellinen_lasku": "{{edellinen_lasku.id}}"}'>

  <div class="mb-5 text-sm text-gray-900">
    <label>
      <div class="mb-2 font-medium">Edellinen lasku (<span class="font-normal">{{formatDate edellinen_lasku.pvm}}</span>)</div>
      <div>
        <label>Summa:</label>
        <span>{{edellinen_lasku.yhteissumma}}</span>
      </div>
      <div>
        <label>Eräpäivä:</label>
        <span>{{formatDate edellinen_lasku.era_pvm}}</span>
      </div>
    </label>
  </div>

  <div class="mb-5">
    <label>
      <div class="mb-2 text-sm font-medium text-gray-900">Muistutuslaskun eräpäivä</div>
      <input type="date" name="era_pvm" min="{{today}}" value="{{default_era_pvm}}"
        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
        required>
    </label>
  </div>

  <div class="flex items-center">
    <button type="submit"
      class="px-4 py-2 my-2 font-semibold text-white bg-blue-700 rounded hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 focus:outline-none">
      Tallenna
    </button>
    <div class="p-1"></div>
    <button hx-get="/tyhja" hx-target="#modal-content"
      class="px-4 py-2 my-2 font-semibold rounded hover:text-white text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300">
      Peruuta
    </button>
  </div>
</form>