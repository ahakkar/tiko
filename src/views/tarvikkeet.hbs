<h1 class="font-medium text-3xl">Tarvikkeet</h1>

<form enctype="multipart/form-data" hx-encoding="multipart/form-data" hx-post="/tarvikkeet/lataa" hx-trigger="submit" hx-target="#main-content">
  <div class="py-2 my-2">
    <label for="file-input"
      class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded my-2">
      Lataa uusi tarvikelista
    </label>
    <input id="file-input" type="file" name="items-file" accept=".xml"
      class="file:hidden max-w-32">
    <input type="submit" value="Lähetä"
      class="border rounded bg-transparent px-2 m-2 py-1 hover:bg-gray-100">
  </div>
</form>

<div class="block max-w-screen-lg">
  <table class="table-fixed w-full text-left text-sm">
    <thead class="w-full border-b font-medium dark:border-neutral-500">
      <tr>
        <th scope="col" class="px-6 py-4">Nimi</th>
        <th scope="col" class="px-6 py-4">Merkki</th>
        <th scope="col" class="px-6 py-4">Tyyppi</th>
        <th scope="col" class="px-6 py-4">Yksikkö</th>
        <th scope="col" class="px-6 py-4">Toimittaja</th>
        <th scope="col" class="px-6 py-4">Varastotilanne</th>
        <th scope="col" class="px-6 py-4">Hinta sisään</th>
      </tr>
    </thead>
    <tbody>
      {{#each warehouseItems}}
      <tr hx-get="/tarvikkeet/{{this.id}}" hx-target="#main-content" hx-push-url="true"
        class="border-b transition duration-300 ease-in-out hover:bg-neutral-200">
        <td class="px-6 py-4 whitespace-nowrap overflow-hidden overflow-ellipsis">{{this.nimi}}</td>
        <td class="px-6 py-4 whitespace-nowrap overflow-hidden overflow-ellipsis">{{this.merkki}}</td>
        <td class="px-6 py-4 whitespace-nowrap overflow-hidden overflow-ellipsis">{{this.tyyppi}}</td>
        <td class="px-6 py-4 whitespace-nowrap overflow-hidden overflow-ellipsis">{{this.yksikko}}</td>
        <td class="px-6 py-4 whitespace-nowrap overflow-hidden overflow-ellipsis">{{this.toimittaja_id}}</td>
        <td class="px-6 py-4 whitespace-nowrap overflow-hidden overflow-ellipsis">{{this.varastotilanne}} {{this.yksikko}}</td>
        <td class="px-6 py-4 whitespace-nowrap overflow-hidden overflow-ellipsis">{{this.hinta_sisaan}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>