<h1 class="font-medium text-3xl">Tarvikkeet</h1>

<table class="min-w-full text-left text-sm">
  <thead class="border-b font-medium dark:border-neutral-500">
    <tr>
      <th scope="col" class="px-6 py-4">Nimi</th>
      <th scope="col" class="px-6 py-4">Merkki</th>
      <th scope="col" class="px-6 py-4">Tyyppi</th>
      <th scope="col" class="px-6 py-4">Yksikkö</th>
      <th scope="col" class="px-6 py-4">Toimittaja</th>
      <th scope="col" class="px-6 py-4">Varastotilanne</th>
      <th scope="col" class="px-6 py-4">Hinta sisään</th>
    </tr>
  </thead>
  <tbody>
    {{#each warehouseItems}}
    <tr hx-get="/tarvikkeet/{{this.id}}" hx-target="#main-content" hx-push-url="true"
      class="border-b transition duration-300 ease-in-out hover:bg-neutral-200">
      <td class="whitespace-nowrap px-6 py-4">{{this.nimi}}</td>
      <td class="whitespace-nowrap px-6 py-4">{{this.merkki}}</td>
      <td class="whitespace-nowrap px-6 py-4">{{this.tyyppi}}</td>
      <td class="whitespace-nowrap px-6 py-4">{{this.yksikko}}</td>
      <td class="whitespace-nowrap px-6 py-4">{{this.toimittaja_id}}</td>
      <td class="whitespace-nowrap px-6 py-4">{{this.varastotilanne}} {{this.yksikko}}</td>
      <td class="whitespace-nowrap px-6 py-4">{{this.hinta_sisaan}}
    </tr>
    {{/each}}
  </tbody>
</table>