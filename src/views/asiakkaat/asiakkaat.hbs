<div class="page-container mt-4">

  {{> otsikkoJaNappi title="Asiakkaat" hxGetUrl="/asiakkaat/uusi" hxTarget="#modal-content" hxPushUrl="false"
  buttonText="Lisää"
  isDisabled=false}}

  <table class="min-w-full text-left text-sm mt-6">
    <thead class="font-bold border-b-2 border-black">
      <tr>
        <th scope="col">Nimi</th>
        <th scope="col">Osoite</th>
        <th scope="col">Postinumero</th>
        <th scope="col">Postitoimipaikka</th>
        <th scope="col">Sähköposti</th>
        <th scope="col">Puhelinnumero</th>
      </tr>
    </thead>
    <tbody>
      {{#each asiakkaat}}
      <tr class="hover:bg-slate-300 whitespace-nowrap odd:bg-slate-100 cursor-pointer">
        <td class="whitespace-nowrap p-2">{{nimi}}</td>
        <td class="whitespace-nowrap p-2">{{osoite}}</td>
        <td class="whitespace-nowrap p-2">{{postinumero}}</td>
        <td class="whitespace-nowrap p-2">{{postitoimipaikka}}</td>
        <td class="whitespace-nowrap p-2">{{sahkoposti}}</td>
        <td class="whitespace-nowrap p-2">{{puhelinnumero}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>