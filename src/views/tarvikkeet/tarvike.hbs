<div class="page-container mt-4">
  {{> otsikko title="Tarvike"}}

  <h1 class="font-medium text-3xl mt-8">{{item.nimi}}</h1>
  <div class="grid">
    <span class="capitalize">{{item.tyyppi}}</span>
    {{#if item.vanhentunut}}
    <span class="text-red-600">Arkistossa</span>
    {{/if}}
  </div>
  {{#if writeAccess}}
  <button hx-patch="{{item.id}}" hx-vals='{"vanhentunut": "{{not item.vanhentunut}}"}'
    class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white mr-4 py-2 px-4 border border-blue-500 hover:border-transparent rounded">
    {{#if item.vanhentunut}}
    Siirrä pois arkistosta
    {{else}}
    Siirrä arkistoon
    {{/if}}
  </button>
  {{/if}}
  <div class="grid m-4">
    <span>Merkki: {{item.merkki}}</span>
    <span>Hinta sisään: {{item.hinta_sisaan}}€</span>
    <span>{{item.varastotilanne}} {{item.yksikko}} varastossa</span>
  </div>

  <h2 class="text-xl font-semibold">Toimittaja</h2>
  <div class="grid m-4">
    <span>{{toimittaja.nimi}}</span>
    <span>{{toimittaja.osoite}}</span>
  </div>

</div>