<div
  class="flex justify-between font-semibold absolute top-0 left-2 transform -translate-y-1/2 px-2 bg-slate-300 rounded-md shadow-lg w-4/12">
  <div class="text-2xl my-auto">{{title}}</div>

  <div>
    {{#if writeAccess}}
    <button hx-get="{{hxGetUrl}}" hx-target="#modal-content"
      class="bg-blue-500 text-white hover:bg-blue-200 font-semibold hover:text-blue-500 border-2 border-blue-500 rounded my-2 px-1 ml-4 text-sm {{#if isDisabled}}opacity-50 cursor-not-allowed{{/if}}"
      {{#if isDisabled}}disabled{{/if}}>
      + {{buttonText}}
    </button>
    {{/if}}
  </div>
</div>