{
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.fixAll.eslint": "always"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "[typescript]": {
        "editor.formatOnSave": false, // Disable default formatter
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[typescriptreact]": {
        "editor.formatOnSave": false, // Disable default formatter
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "files.autoSave": "onFocusChange"
}